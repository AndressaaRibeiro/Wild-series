{# templates/program/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}
<h1>Categorie: {{ categories.name }}</h1>

{% if programs is empty %}
        <p>Aucune série trouvée.</p>
{% else %}
    <ul>
		{% for program in programs %}
		<li>
				<strong>ID :</strong>{{ program.id}}</br>
				<strong>Title :</strong>{{ program.title}}</br>
				<strong>Synopsis :</strong>{{ program.synopsis}}</br>
				{# Lien vers la fiche de la série : #}
				<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
			</li>
		{% endfor %}
    </ul>
	{% endif %}
{% endblock %}
